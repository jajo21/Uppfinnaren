<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Uppfinnaren</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Uppfinnaren</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Hem</a></li>
                        @await Component.InvokeAsync("CategoryMenu")
@*                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Category" asp-route-id="1">Tavlor</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Sculptures">Skulpturer</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Jewelry">Smycken</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Tools">Verktyg</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Furniture">Möbler</a></li>                        
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="List">Uppfinningar(alla)</a></li>*@
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Kontakt</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Uppfinnaren
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
